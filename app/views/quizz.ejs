<%- include('partials/header') %>


<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h2 class="h1 display-4"><%= foundQuiz.title %></h2>
    <p class="lead"><%= foundQuiz.description %></p>
    <p class="font-weight-bold">par <%= foundQuiz.author.fullname %></p>
    <p class="lead"><%= foundQuiz.questions.length %> questions</p>
</div>

<div class="row">

    <% for(const tag of foundQuiz.tags) { %> 
    <div class="col-3 p-4 text-center">
        <a class="btn btn-block btn-lg tag tag--<%= tag.name.toLowerCase() %>" href="#">
            <%= tag.name %>
        </a>
    </div>
    <% } %>

</div>

<div class="row">

    <% for(const question of foundQuiz.questions) { %>
        <div class="col-12">
            <label class="badge level level--<%= question.level.name.toLowerCase() %>"><%= question.level.name %></label>
            <h4>
                <%= question.question %>
            </h4>
            <ol>
                <% for(const answer of question.answers) { %>
                <li><%= answer.description %></li>
                <% } %>
            </ol>
        </div>
    <% } %>
</div>


<%- include('partials/footer') %>